{% extends 'layout.twig' %}
{% block nav %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
          aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="collapsibleNavId">
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
              <li class="nav-item active">
                  <a class="nav-link" href="/panel">Panel <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/sticky">Karteczki</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/panel/translate">Tłumacz</a>
              </li>
          </ul>
          <button style="margin-right:10px;" type="button" class="btn btn-outline-warning">{{user}}</button>
          <a href="/panel/logout" class="btn btn-outline-warning">Wyloguj</a>
      </div>
  </nav>
  
{% endblock %}

{% block body %}
<div class="container" style="margin-top:20px">
    <div class="row" style="margin-bottom:20px">
        <div class="col-lg-8">
            <textarea class="form-control" id="note" rows="2"></textarea>
        </div>
        <div class="col-lg-4">
            <button id="save" type="button" class="btn btn-primary btn-lg btn-block" style="margin-top:7px;">Wyślij</button>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:80%;">Notatki</th>
                <th>Opcje</th>
            </tr>
        </thead>
        <tbody>
            {% for note in notes %}
            <tr>                
                <td><p style="padding: .375rem .75rem; margin:0;">{{note.text}}</p></td>
                <td>
                    <button data-id="{{note.idNote}}" class="btn btn-danger delete">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                        <span><strong>Usuń</strong></span>            
                    </button>
                    <button data-id="{{note.idNote}}" class="btn btn-primary edit">
                        <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        <span><strong>Edytuj</strong></span>            
                    </button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Gratulacje</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Udało się zaktualizować
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block js %}
    <script src="/javascripts/panel.js"></script>
{% endblock %}