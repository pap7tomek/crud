{% extends 'layout.twig' %}
{% block nav %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
          aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
          
      <div class="collapse navbar-collapse" id="collapsibleNavId">
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
              <li class="nav-item active">
                  <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/register">Rejestracja</a>
              </li>
          </ul>
          <form id="loginForm" action="login" method="post" class="form-inline my-2 my-lg-0">
              <input id="login" name="login" class="form-control mr-sm-2" type="text" placeholder="Login">
              <input id="password" name="password" class="form-control mr-sm-2" type="password" placeholder="Hasło">
              <button id="submit"class="btn btn-outline-success my-2 my-sm-0" type="submit">Zaloguj</button>
          </form>
      </div>
  </nav>
  <div id="badLogin" class="container" style="margin-top:20px;display:none;">
      <div class="alert alert-danger" role="alert">
          <strong>Zły login lub hasło</strong>
      </div>
  </div>
{% endblock %}

{% block body %}
<div class="container">
    <form action="register" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Login</label>
        <input id="newLogin" name="login" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="exist" class="form-text text-muted" style="display:none">Taki użytkownik już istnieje</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input id="newPassword" name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" pattern=".{5,10}" required title="5 to 10 characters">
    </div>
    <button id="create" type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{% endblock %}
{% block js %}
    <script src="/javascripts/register.js"></script>
{% endblock %}